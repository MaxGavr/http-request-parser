{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ci-linux",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ci-linux",
      "configurePreset": "ci-linux",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "ci-linux",
      "configurePreset": "ci-linux",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
